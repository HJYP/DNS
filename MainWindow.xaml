<Window x:Class="DNS_Changer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DNS Changer" Height="200" Width="350">

    <Grid Margin="10">
        <!-- Preferred DNS -->
        <Label Content="Preferred DNS Server:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="preferredDns" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="150,0,0,0"/>

        <!-- Alternate DNS -->
        <Label Content="Alternate DNS Server:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,40,0,0"/>
        <TextBox x:Name="alternateDns" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="150,40,0,0"/>

        <!-- دکمه تغییر -->
        <Button x:Name="change_btn" Content="اعمال DNS" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="300" Height="30" Click="change_btn_Click"/>
    </Grid>
</Window>
