<Window x:Class="DNS_Changer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="DNS Changer" Height="216" Width="359" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="119*"/>
            <ColumnDefinition Width="220*"/>
        </Grid.ColumnDefinitions>
        <!-- Preferred DNS -->
        <Label Content="Preferred DNS Server:" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

        <xctk:MaskedTextBox x:Name="preferredDns" Watermark="8.8.8.8"  HorizontalAlignment="Center" VerticalAlignment="Top" Width="158" Grid.Column="1"/>

        <!-- Alternate DNS -->
        <Label Content="Alternate DNS Server:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,40,0,0" Grid.ColumnSpan="2"/>
        <xctk:MaskedTextBox x:Name="alternateDns" Watermark="8.8.8.8" HorizontalAlignment="Center" VerticalAlignment="Top" Width="158" Margin="0,40,0,0" Grid.Column="1"/>

        <!-- Adapter Name -->
        <Label x:Name="adapterLabel" Content="Adapter: ?" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,80,0,0"/>

        <!-- دکمه تغییر -->
        <Button x:Name="change_btn" Content="اعمال DNS" HorizontalAlignment="Left" VerticalAlignment="Top" Width="145" Height="30" Margin="44,111,0,0" Click="change_btn_Click" Grid.Column="1"/>

        <!-- دکمه ریست -->
        <Button x:Name="reset_btn" Content="ریست DNS" HorizontalAlignment="Left" VerticalAlignment="Top" Width="148" Height="30" Click="reset_btn_Click" RenderTransformOrigin="0.5,-0.833" Margin="10,111,0,0" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
